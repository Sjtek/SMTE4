<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="201dp"
        android:layout_height="217dp"
        android:id="@+id/mugShotDetail"
        android:src="@drawable/alexander"
        android:gravity="center_horizontal"
        android:layout_alignBottom="@+id/listViewCrimes"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <ListView
        android:layout_width="139dp"
        android:layout_height="276dp"
        android:id="@+id/listViewCrimes"
        android:layout_gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/mugNameDetail"
        android:layout_below="@+id/mugShotDetail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/mugBountyDetail"
        android:layout_below="@+id/mugNameDetail"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
